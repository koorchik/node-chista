{
  "name": "chista",
  "version": "2.1.0",
  "description": "A minimal, framework-agnostic base class for building clean service layers with LIVR validation",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "service",
    "validation",
    "livr",
    "clean-architecture",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "livr": ">=2.10.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  }
}
